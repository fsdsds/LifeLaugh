<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_touxiang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            fresco:actualImageScaleType="centerInside"
            fresco:roundAsCircle="true"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_toRightOf="@id/img_touxiang"
            android:layout_marginLeft="10dp"
            android:textColor="@color/item_title_color"
            android:text="dd"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/img_touxiang"
            android:layout_marginLeft="10dp"
            android:text="2016-09-22 22:56:02"
            android:textColor="@color/item_title_color"
            android:textSize="11sp"
            />
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/share"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="十一快到了，我准备好了，你们呢？"
            android:textColor="@color/item_content_color"
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:layout_marginBottom="5dp"
            />

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:src="@mipmap/ad"
            android:scaleType="c"
            android:layout_below="@+id/tv_content"
            android:layout_centerHorizontal="true"
            />-->
        <!--<com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_content"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_content"
            fresco:progressBarImage="@mipmap/progress"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@mipmap/ic_launcher"
            />-->
        <RelativeLayout
            android:id="@+id/rela_webview"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/tv_content"
            >
            <WebView
                android:id="@+id/img_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:transitionName="mybtn"
                >
            </WebView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_show"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@mipmap/check_full_pic_back"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击查看大图"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:drawableLeft="@mipmap/check_full_pic_btn"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
