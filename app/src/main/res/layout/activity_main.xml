<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    >

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
+
</FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/DownMenuDivider"
            />

        <RadioGroup
            android:id="@+id/Main_raido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_joke"
                style="@style/RadioButtonStyle"
                android:drawableTop="@drawable/joke_selector"
                android:text="笑话" />

            <RadioButton
                android:id="@+id/radio_comic"
                style="@style/RadioButtonStyle"
                android:drawableTop="@drawable/comic_selector"
                android:text="漫画" />

            <RadioButton
                android:id="@+id/radio_picture"
                style="@style/RadioButtonStyle"
                android:drawableTop="@drawable/picture_selector"
                android:text="图片" />

            <RadioButton
                android:id="@+id/radio_life"
                style="@style/RadioButtonStyle"
                android:drawableTop="@drawable/life_selector"
                android:text="生活助手" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>
